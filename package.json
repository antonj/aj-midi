{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --minify",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production remix-serve build"
  },
  "dependencies": {
    "@emotion/css": "^11.7.1",
    "@remix-run/react": "^1.3.1",
    "@remix-run/vercel": "^1.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.1",
    "zustand": "^3.7.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.1",
    "@remix-run/eslint-config": "^1.3.1",
    "@remix-run/serve": "^1.3.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
