{
  "name": "aj-midi",
  "private": true,
  "type": "module",
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "pnpm build:css && pnpm static-build && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --minify",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "concurrently \"pnpm static-dev\" \"pnpm dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css --watch",
    "start": "cross-env NODE_ENV=production remix-serve ./build/index.js",
    "static-build": "esbuild public/audio-worklet.ts --minify --bundle --outfile=public/audio-worklet.js '--define:process.env.NODE_ENV=\"\"'",
    "static-dev": "esbuild public/audio-worklet.ts --watch --bundle --outfile=public/audio-worklet.js '--define:process.env.NODE_ENV=\"development\"'",
    "test": "jest",
    "fix": "biome check . --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@remix-run/node": "^2.17.1",
    "@remix-run/react": "^2.17.1",
    "@remix-run/serve": "^2.17.1",
    "@remix-run/vercel": "^1.19.3",
    "@tonejs/midi": "npm:tonejs-midi-fix@^2.0.28",
    "esbuild": "^0.25.10",
    "lil-gui": "^0.20.0",
    "pitchfinder": "^2.3.2",
    "playwright": "^1.55.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "remix": "^2.17.1",
    "rxjs": "^7.8.2",
    "valtio": "^2.1.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@remix-run/dev": "^2.17.1",
    "@remix-run/eslint-config": "^2.17.1",
    "@tailwindcss/cli": "^4.1.13",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "9.36.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  },
  "version": "0.0.0"
}
